---
interface Props {
  title: string;
  description?: string;
  hideSignature?: boolean;
}

const { title, description = "André Branco Photography Portfolio", hideSignature = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body>
  <slot />

  <!-- Signature - Hidden on mobile, shown on desktop in top-right -->
  {!hideSignature && (
    <div class="hidden md:block fixed top-8 right-8 z-40 signature">
      André Branco
    </div>
  )}

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500&display=swap');

    .signature {
      font-family: 'Montserrat', 'Avenir', -apple-system, BlinkMacSystemFont, sans-serif;
      font-size: 1rem;
      color: white;
      font-weight: 500;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      mix-blend-mode: difference;
      opacity: 1;
      transition: opacity 0.3s ease;
      text-shadow: 0 0 8px rgba(255, 255, 255, 0.3);
    }

    .signature:hover {
      opacity: 1;
    }
  </style>
</body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
