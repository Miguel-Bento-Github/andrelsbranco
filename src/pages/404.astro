---
export const prerender = true;

import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
---

<BaseLayout title="404 - Page Not Found" description="The page you're looking for doesn't exist">
  <Header />

  <section class="min-h-screen flex items-center justify-center px-6">
    <div class="text-center max-w-2xl">
      <h1 class="text-9xl font-light  mb-8">404</h1>
      <h2 class="text-4xl md:text-5xl font-light  mb-6">
        Page Not Found
      </h2>
      <p class="text-lg  mb-12">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <a
        href="/"
        class="inline-block px-8 py-3 bg-[#e8e5a0] text-black font-medium rounded-full hover:bg-[#f0edba] transition-colors duration-300"
      >
        Back to Home
      </a>
    </div>
  </section>
</BaseLayout>
