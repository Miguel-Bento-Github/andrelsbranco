---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
---

<BaseLayout title="Info - André Branco" description="About André Branco and contact information" hideSignature={true}>
  <Header />

  <!-- Main Content - Centered in viewport -->
  <section class="h-[calc(100vh-6rem)] flex items-center justify-center px-6">
    <div class="max-w-2xl w-full text-center">
      <p class="text-xl md:text-2xl font-light mb-6 opacity-80">
        For inquiries:
      </p>
      <p class="text-lg md:text-xl font-light mb-4 opacity-60">
        Please email us at
      </p>
      <a
        href="mailto:andrelsbranco@gmail.com"
        class="text-xl md:text-2xl font-light hover:opacity-70 transition-opacity duration-300 underline decoration-white/30 underline-offset-4"
      >
        andrelsbranco@gmail.com
      </a>
    </div>
  </section>
</BaseLayout>
